# Changes to Path
# =======================
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# Add Personal Helper Scripts
# =======================
PATH="$PATH:~/bin" export PATH

# Sublime Text Alias
# ===============================
alias sl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"

# Xero Aliases
# ===============================
alias dev="cd ~/Development"

# Xero Aliases
# ===============================
XERO_DIR="~/Xero_Development/"
alias xdev="cd ${XERO_DIR}"
alias bde="sl ${XERO_DIR}/Xero/Xero && sl ${XERO_DIR}/XeroJS/ContactsAutoCompleter"
alias dnotes="vim ${XERO_DIR}/Notes/"
alias npmac="npm i ../../ReactLabs/contacts-autocompleter"

# NVM Setup
# =======================
export NVM_DIR="${HOME}/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

# Mongo shell start
# ======================
alias mdb="mongod --dbpath /Users/mike.green/Development/mongo_data/db"

# Python
# =======================
alias py3="python3"

# Python Virtualenvwrapper Setup
# =======================
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/Code/Python
#source /usr/local/bin/virtualenvwrapper.sh

# Rust Cargo Setup
# =======================
export PATH="$HOME/.cargo/bin:$PATH"

