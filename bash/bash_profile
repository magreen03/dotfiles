# Bash Aliases
# ===============================
alias ll='gls -ACGh --color=auto'
alias la='ls -al'
alias clr='clear'
alias vi='vim'
alias ebash='vim ~/.bash_profile'
alias rbash='. ~/.bash_profile'

# Fun Aliases
# ===============================
alias weather='curl -4 http://wttr.in/new_york'
alias moon='curl -4 http://wttr.in/Moon'

# NPM  Aliases
# ===============================
alias npmg='npm list -g --depth=0 2>/dev/null'
alias npml='npm list --depth=0 2>/dev/null'
alias nrw='npm run watch'

# Node Env Variable
# ===============================
export NODE_ENV="development"

# Git completion and prompt
source ~/dotfiles/.git-completion.bash
source ~/dotfiles/.git-prompt.sh

# Load Bash prompt
# =======================
# export PS1='üêå \[\e[0;36m\]\[\e[0;36m\] \W\[\033[0;35m\]$(__git_ps1 "
